use JMS\Serializer\Annotation as Serializer;

/**

* Class BasePayment

*

* @package AppBundle\Api\Model\Payment

*/

abstract class BasePayment

{

/**

* @var float

*

* @Serializer\Type("float")

* @Serializer\SerializedName("amount")

*/VND

protected $amount;

/** 9.219.770.000.000 VND

* @var float

